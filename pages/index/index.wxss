/* pages/index/index.wxss */
.container {
  padding: 100rpx 0;
}
.card-category {
  margin-top: 50rpx;
  background-size: cover;
  background-position: center;
  height: 180px;
  width: 90%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-radius: 5px;
  box-shadow: 0 0 15px rgba(0,0,0,0.2);
}

.h1 {
  color: white;
  font-size: 24px;
  font-weight: bold;
  text-shadow: 1px 1px 3px rgba(0,0,0,0.2);
}

.p {
  color: white;
  font-size: 12px;
  text-shadow: 1px 1px 3px rgba(0,0,0,0.2);
}